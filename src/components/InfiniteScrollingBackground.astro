  canvas.width = 100 * vw;
  canvas.height = 100 * vh;
  const ctx = canvas.getContext("2d") as CanvasRenderingContext2D;
  function drawOne(item: string, x: number, y: number) {
    ctx.font = "15vh Arial"; // è®¾ç½®å­—ä½“å¤§å°å’Œç±»å‹
