  function drawAll(x:number, idx:number) {
    for (let i = 0; i < 5; i++) {
      for (let j = 0; j < fruits.length; j++) {
        drawOne(
          fruits[(j + idx + random + i * i * i) % fruits.length],
          22 * j * vh - x,
          4 * vh + verticalLine[i]
