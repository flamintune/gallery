---
import type { ImageMetadata } from "astro";
import type { ImagePath } from "../types/imagePaths";
import { Image } from "astro:assets";
interface Props {
  imagePath: ImagePath;
  altText?: string;
}

const { imagePath, altText = "哦豁没加载出来" } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
---

<div class="card">
  <Image src={images[imagePath]()} alt={altText} class="card" />
</div>

<style>
  .card {
    position: absolute;
    top: 0;
    left: 0;
    transform-origin: left top;
    height: 40vh;
    width: 40vh;
    widows: auto;
    object-fit: contain;
    transform: translate(0, 0);
  }
</style>
