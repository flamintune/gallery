---
import type { ImageMetadata } from "astro";
import type { ImageEnum } from "../types/imagePaths";
import { Image } from "astro:assets";
interface Props {
  imagePath: ImageEnum;
  altText?: string;
}

const { imagePath, altText = "哦豁没加载出来" } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
---

<div class="card">
  <Image src={images[imagePath]()} alt={altText} class="card" />
</div>

<style>
  .card {
    height: 40vh;
    width: fit-content;
    widows: auto;
    object-fit: contain;
    /* opacity: 0; */
    border: 2px solid black;
    border-radius: 20px;
    display: block;
  }
</style>
